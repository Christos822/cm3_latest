# 1 "arch/arm64/boot/dts/rockchip/overlays/rk3568-spi3-m0-cs0-mcp2515.dts"
# 1 "<built-in>"
# 1 "<command-line>"
# 1 "arch/arm64/boot/dts/rockchip/overlays/rk3568-spi3-m0-cs0-mcp2515.dts"
/dts-v1/;
/plugin/;

# 1 "./scripts/dtc/include-prefixes/dt-bindings/gpio/gpio.h" 1
# 5 "arch/arm64/boot/dts/rockchip/overlays/rk3568-spi3-m0-cs0-mcp2515.dts" 2
# 1 "./scripts/dtc/include-prefixes/dt-bindings/pinctrl/rockchip.h" 1
# 6 "arch/arm64/boot/dts/rockchip/overlays/rk3568-spi3-m0-cs0-mcp2515.dts" 2
# 1 "./scripts/dtc/include-prefixes/dt-bindings/interrupt-controller/irq.h" 1
# 7 "arch/arm64/boot/dts/rockchip/overlays/rk3568-spi3-m0-cs0-mcp2515.dts" 2

/ {

 metadata {
  title = "Enable MCP2515 on SPI3-M0 CS0";
  compatible = "radxa,cm3-io", "radxa,cm3-rpi-cm4-io";
  category = "misc";
  exclusive = "GPIO4_B0", "GPIO4_B2", "GPIO4_B3", "GPIO4_A6", "GPIO4_C5";
  description = "Enable MCP2515 on SPI3-M0 CS0 with 12 MHz Crystal Oscillator.
INT=26";
 };
};

&pinctrl {
 mcp2515_int_pin {
  mcp2515_int_pin: mcp2515_int_pin {
   rockchip,pins = <4 21 0 &pcfg_pull_none>;
  };
 };
};

&{/} {
 can_mcp2515_osc: can-mcp2515-osc {
  compatible = "fixed-clock";
  clock-frequency = <12000000>;
  #clock-cells = <0>;
 };
};

&spi3 {
 status = "okay";
 max-freq = <10000000>;
 #address-cells = <1>;
 #size-cells = <0>;
 pinctrl-names = "default", "high_speed";
 pinctrl-0 = <&spi3m0_cs0 &spi3m0_pins>;
 pinctrl-1 = <&spi3m0_cs0 &spi3m0_pins_hs>;

 can_mcp2515: can-mcp2515@0 {
  status = "okay";
  compatible = "microchip,mcp2515";
  reg = <0>;
  interrupt-parent = <&gpio4>;
  interrupts = <21 2>;
  spi-max-frequency = <10000000>;
  clocks = <&can_mcp2515_osc>;
  vdd-supply = <&vcc3v3_sys>;
  xceiver-supply = <&vcc3v3_sys>;
  pinctrl-names = "default";
  pinctrl-0 = <&mcp2515_int_pin>;
 };
};
