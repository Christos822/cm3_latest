# 1 "arch/arm64/boot/dts/rockchip/overlays/rk3399-spi2-sc16is752.dts"
# 1 "<built-in>"
# 1 "<command-line>"
# 1 "arch/arm64/boot/dts/rockchip/overlays/rk3399-spi2-sc16is752.dts"
/dts-v1/;
/plugin/;

# 1 "./scripts/dtc/include-prefixes/dt-bindings/gpio/gpio.h" 1
# 5 "arch/arm64/boot/dts/rockchip/overlays/rk3399-spi2-sc16is752.dts" 2
# 1 "./scripts/dtc/include-prefixes/dt-bindings/pinctrl/rockchip.h" 1
# 6 "arch/arm64/boot/dts/rockchip/overlays/rk3399-spi2-sc16is752.dts" 2
# 1 "./scripts/dtc/include-prefixes/dt-bindings/interrupt-controller/irq.h" 1
# 7 "arch/arm64/boot/dts/rockchip/overlays/rk3399-spi2-sc16is752.dts" 2

/{
 metadata {
  title = "Enable SC16IS752 on SPI2";
  compatible = "rockchip,rk3399";
  category = "misc";
  exclusive = "GPIO2_B3", "GPIO2_B2", "GPIO2_B1", "GPIO2_B4", "GPIO4_A6";
  description = "Enable SC16IS752 SPI on SPI2.
INT=38";
 };
};

&{/} {
 sc16is752_clk: sc16is752_spi2_0_clk {
  compatible = "fixed-clock";
  clock-frequency = <1475600>;
  #clock-cells = <0>;
 };
};

&spi2 {
 status = "okay";
 pinctrl-names = "default";
 pinctrl-0 = <&spi2_clk &spi2_cs0 &spi2_rx &spi2_tx>;

 #address-cells = <1>;
 #size-cells = <0>;

 sc16is752: sc16is752@0 {
  compatible = "nxp,sc16is752";
  reg = <0>;
  spi-max-frequency = <4000000>;

  interrupt-parent = <&gpio4>;
  interrupts = <6 2>;

  clocks = <&sc16is752_clk>;
  #gpio-controller;
  #gpio-cells = <2>;
 };
};
