# 1 "arch/arm64/boot/dts/rockchip/overlays/rk3399-dwc3-0-peripheral.dts"
# 1 "<built-in>"
# 1 "<command-line>"
# 1 "arch/arm64/boot/dts/rockchip/overlays/rk3399-dwc3-0-peripheral.dts"
/dts-v1/;
/plugin/;

/ {
 metadata {
  title = "Set OTG port to Peripheral mode";
  compatible = "rockchip,rk3399";
  category = "misc";
  exclusive = "usbdrd_dwc3_0-dr_mode";
  description = "Set OTG port to Peripheral mode.
Use this when you want to connect to another computer.";
 };
};

&usbdrd_dwc3_0 {
 status = "okay";
 dr_mode = "peripheral";
};
